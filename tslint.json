{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "import-name": [
      false
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "max-line-length": [
      true,
      120
    ],
    "strict-boolean-expressions": [
      "allow-string",
      "allow-mix",
      "allow-number"
    ],
    "function-name": [false]
  },
  "extends": "tslint-config-airbnb"
}
